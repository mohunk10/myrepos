<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_player_control"
    android:layout_width="match_parent"
    android:layout_height="66.0dip"
    android:background="@color/player_control_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_player_control_album"
        android:layout_width="66.0dip"
        android:layout_height="66.0dip"
        android:background="@drawable/player_cover_bg"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_player_control_artist"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="3.0dip"
            android:paddingRight="1.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/tv_player_control_name"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="3.0dip"
            android:paddingRight="1.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/tv_player_control_time"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="3.0dip"
            android:paddingRight="1.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11.0sp" 
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip" >

        <TextView
            android:id="@+id/tv_player_control_previous"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/player_control_btn_previous" />

        <TextView
            android:id="@+id/tv_player_control_play"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/player_control_btn_play"
            android:tag="0" />

        <TextView
            android:id="@+id/tv_player_control_next"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/player_control_btn_next" />
    </LinearLayout>

</LinearLayout>