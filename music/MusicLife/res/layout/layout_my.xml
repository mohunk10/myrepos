<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150.0dip"
                android:background="@color/player_control_bg"
                android:clickable="true"
                android:gravity="bottom"
                android:onClick="ll_login"
                android:orientation="horizontal"
                android:paddingBottom="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="80.0dip" >

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/ic_user_default" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60.0dip"
                    android:orientation="vertical"
                    android:padding="5.0dip" >

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:hint="登录\\注册"
                        android:text="登录\\注册"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="好音质，乐动生活"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_my_music"
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="ll_my_music"
                        android:orientation="horizontal"
                        android:padding="5.0dip" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="本地音乐"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="本地音乐"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_scan_local_music"
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="ll_scan_local_music"
                        android:orientation="horizontal"
                        android:padding="5.0dip" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="扫描"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="扫描本地歌曲"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="ll_favorite"
                        android:orientation="horizontal"
                        android:padding="5.0dip" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="我的收藏"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="我的收藏"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_copyright"
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="ll_copyright"
                        android:orientation="horizontal"
                        android:padding="5.0dip" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="版权"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="版权声明"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="ll_about"
                        android:orientation="horizontal"
                        android:padding="5.0dip" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="关于"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="关于我们"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/player_control_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5.0dip"
                        android:visibility="invisible" >

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_user_default" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:singleLine="true"
                                android:text="关于"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="关于我们"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>